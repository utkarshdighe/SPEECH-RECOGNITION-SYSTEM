String command;
int relay = 8;

void setup() {
  pinMode(relay, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  while (Serial.available()) {
    command = Serial.readString();

    if (command.indexOf("ON") > 0) {
      digitalWrite(relay, HIGH);
    }
    if (command.indexOf("OFF") > 0) {
      digitalWrite(relay, LOW);
    }
  }
}
